<h2>this is the new page for projects</h2>

<p><%= link_to 'Back to projects', projects_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>Start</th>
    <th>Finish</th>
  </tr>
  <%= form_for @project do |f| %>
    <tr>
      <td><%= f.text_field :name %></td>
      <td><%= f.text_field :duration %></td>
      <td><%= f.text_field :start %></td>
      <td><%= f.text_field :finish %></td>
      <td><%= f.submit 'Submit' %></td>
    </tr>
  <%- end -%>
</table>
